# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit your real .env file

# Server Configuration
PORT=3000
HOST=127.0.0.1
NODE_ENV=development
# NODE_ENV=production

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=node_auth_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password


# JWT (JSON Web Token) Configuration
# IMPORTANT:
# - Use a long, random secret in production
# - Never commit the real secret
JWT_SECRET=your_super_secret_jwt_key
JWT_EXPIRE=24h

# CORS Configuration
# Frontend URL allowed to access the API
CORS_ORIGIN=http://localhost:4000

# Client / Frontend Configuration
# Used for email verification & password reset links
CLIENT_URL=http://localhost:4000

# Email Configuration
# Sender address shown in emails
EMAIL_FROM=noreply@node-auth.local


# Email Provider Settings

# DEVELOPMENT:
# - If USE_ETHEREAL=true, fake SMTP credentials are used
# - Emails are captured and previewed (no real emails sent)
#
# PRODUCTION:
# - Set USE_ETHEREAL=false
# - Configure SMTP_* values with a real provider

USE_ETHEREAL=true

# SMTP Configuration (Production)
# Example providers:
# - Gmail
# - SendGrid
# - Mailgun
# - AWS SES

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Email Verification Settings
# true  = user must verify email before login
# false = allow login without verification (dev/testing)
REQUIRE_EMAIL_VERIFICATION=true
